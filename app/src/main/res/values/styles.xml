<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for title-->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/title</item>
        <item name="android:padding">@dimen/text_pad</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for title image banner-->
    <style name="Banner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/banner_height</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/sign_banner</item>
    </style>

    <!-- Style for quiz directions-->
    <style name="Directions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/directions</item>
        <item name="android:padding">@dimen/text_pad</item>
        <item name="android:textSize">@dimen/reg_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for name input-->
    <style name="Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sign_banner</item>
        <item name="android:hint">@string/Name</item>
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <!-- Visual divider between questions-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/thin_line</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/line_pad</item>
        <item name="android:background">#A9A9A9</item>
    </style>

    <!-- Style for question text-->
    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_pad</item>
        <item name="android:textSize">@dimen/question_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Style for answer text-->
    <style name="Answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_pad</item>
        <item name="android:textSize">@dimen/answer_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Style for sign image-->
    <style name="Sign">
        <item name="android:layout_width">@dimen/sign100</item>
        <item name="android:layout_height">@dimen/sign100</item>
        <item name="android:layout_margin">@dimen/text_pad</item>
    </style>


    <!-- Style for radio button-->
    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_pad</item>
        <item name="android:layout_marginLeft">@dimen/button_pad</item>
        <item name="android:paddingLeft">@dimen/button_pad12</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- Style for checkbox-->
    <style name="Checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- Style for submit and reset buttons-->
    <style name="ScoreButton">
        <item name="android:layout_width">@dimen/submit150</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">@dimen/small_pad</item>
    </style>


    <!-- Style for score report text-->
    <style name="ScoreReport">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">@dimen/submit_pad</item>
        <item name="android:textSize">@dimen/reg_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for extended question directions-->
    <style name="QuestionDirections">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/directions</item>
        <item name="android:padding">@dimen/text_pad</item>
        <item name="android:textSize">@dimen/reg_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Style for name sign input-->
    <style name="NameSign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sign_banner</item>
        <item name="android:hint">What animal is on sign?</item>
        <item name="android:inputType">textCapCharacters</item>
    </style>





</resources>
